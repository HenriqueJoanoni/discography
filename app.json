{
  "expo": {
    "name": "Discografia",
    "slug": "Discografia",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "discografia",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "androidStatusBar": {
      "backgroundColor": "#384B70",
      "barStyle": "light-content",
      "translucent": false
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#384B70"
      },
      "statusBar": {
        "backgroundColor": "#384B70",
        "barStyle": "light-content"
      },
      "softwareKeyboardLayoutMode": "pan",
      "windowSoftInputMode": "adjustResize",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.henriquedev.Discografia"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#384B70",
          "androidStatusBar": {
            "backgroundColor": "#384B70",
            "barStyle": "light-content",
            "translucent": false
          }
        }
      ],
      "expo-sqlite",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow access to your photos to upload vinyl artwork."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
